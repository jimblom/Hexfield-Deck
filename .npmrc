# Enforce engine compatibility (fail if Node/pnpm version mismatch)
engine-strict=true

# Save exact versions (no ^ or ~ in package.json)
save-exact=true

# Use frozen lockfile in CI (fail if lockfile is out of sync)
# Developers can use `pnpm install` normally
# CI should use `pnpm install --frozen-lockfile`
# prefer-frozen-lockfile=true

# Shared workspace settings
# Hoist patterns (keep dependencies flat where possible)
shamefully-hoist=false

# Auto-install peers (don't prompt for peer dependencies)
auto-install-peers=true

# Strict peer dependencies (warn if peer deps are missing)
strict-peer-dependencies=false
